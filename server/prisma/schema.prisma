// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccessType {
  ADMIN
  DOCTOR
}

model User {
  id             String        @id @default(uuid())
  name           String
  age            Int
  document       String
  securityNumber String        @unique
  username       String        @unique
  password       String
  email          String
  accessType     AccessType
  Appointment    Appointment[]
}

model Appointment {
  id          String   @id @default(uuid())
  date        DateTime
  startTime   String
  endTime     String
  doctorId    User     @relation(fields: [userId], references: [id])
  userId      String
  patientId   String
  patientName String
  description String
  createdAt   DateTime @default(now())
}
